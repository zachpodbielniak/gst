#ifndef GST_VERSION_H
#define GST_VERSION_H

#include <glib.h>

G_BEGIN_DECLS

/**
 * GST_VERSION_MAJOR:
 *
 * The major version component of the GST library.
 */
#define GST_VERSION_MAJOR (@GST_VERSION_MAJOR@)

/**
 * GST_VERSION_MINOR:
 *
 * The minor version component of the GST library.
 */
#define GST_VERSION_MINOR (@GST_VERSION_MINOR@)

/**
 * GST_VERSION_MICRO:
 *
 * The micro version component of the GST library.
 */
#define GST_VERSION_MICRO (@GST_VERSION_MICRO@)

/**
 * GST_VERSION_STRING:
 *
 * The full version string of the GST library.
 */
#define GST_VERSION_STRING "@GST_VERSION@"

/**
 * GST_CHECK_VERSION:
 * @major: the major version to check for
 * @minor: the minor version to check for
 * @micro: the micro version to check for
 *
 * Checks whether the GST library version is at least the
 * requested version.
 *
 * Returns: %TRUE if the version is satisfied
 */
#define GST_CHECK_VERSION(major, minor, micro) \
    ((GST_VERSION_MAJOR > (major)) || \
     (GST_VERSION_MAJOR == (major) && GST_VERSION_MINOR > (minor)) || \
     (GST_VERSION_MAJOR == (major) && GST_VERSION_MINOR == (minor) && GST_VERSION_MICRO >= (micro)))

/**
 * gst_get_version:
 * @major: (out) (optional): location for major version
 * @minor: (out) (optional): location for minor version
 * @micro: (out) (optional): location for micro version
 *
 * Retrieves the runtime version of the GST library.
 */
void gst_get_version(guint *major, guint *minor, guint *micro);

/**
 * gst_get_version_string:
 *
 * Retrieves the runtime version string of the GST library.
 *
 * Returns: (transfer none): the version string
 */
const gchar *gst_get_version_string(void);

G_END_DECLS

#endif /* GST_VERSION_H */
